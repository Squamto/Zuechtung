<UserControl 
    x:Class="Framework.View.NameValueView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="35" d:DesignWidth="300">
	<Grid>
		<Border 
			BorderBrush="Gray" BorderThickness="1">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="{Binding ValueNameWidth, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=200}"/>
					<ColumnDefinition Width="{Binding ValueWidth, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=100}"/>
					<ColumnDefinition Width="{Binding UnitWidth, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=0}"/>
				</Grid.ColumnDefinitions>
				<TextBox 
		            Grid.Column="0"
					Text="{Binding ValueName, RelativeSource={RelativeSource AncestorType=UserControl}}"
					IsReadOnly="True" Background="Transparent" Foreground="DimGray" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="14" Padding="0,0"/>
				<TextBox 
		            Grid.Column="1"
			        Text="{Binding .,Mode=OneWay, StringFormat=F1}" 
					IsReadOnly="True"
					Background="Transparent" Foreground="Gray" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="12" Padding="10,0"/>
				<TextBox 
		            Grid.Column="2"
					Text="{Binding Unit, RelativeSource={RelativeSource AncestorType=UserControl}}"
					IsReadOnly="True" Background="Transparent" Foreground="DimGray" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="12" Padding="10,0"/>
			</Grid>
		</Border>
	</Grid>
</UserControl>
