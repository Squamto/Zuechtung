<UserControl 
    x:Class="Framework.View.NameLed1View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:view="clr-namespace:Framework.View"
	mc:Ignorable="d" 
    d:DesignHeight="35" d:DesignWidth="300">
	<Grid>
		<Border 
			BorderBrush="Gray" BorderThickness="1">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="{Binding LedValueNameWidth, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=200}"/>
					<ColumnDefinition Width="{Binding LedValueWidth, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=100}"/>
				</Grid.ColumnDefinitions>
				<TextBox 
		            Grid.Column="0"
					Text="{Binding LedValueName, RelativeSource={RelativeSource AncestorType=UserControl}}"
					IsReadOnly="True" Background="Transparent" Foreground="DimGray" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="14" Padding="0,0"/>
				<Border
					Grid.Column="1"
					BorderBrush="Gray" BorderThickness="1">
					<view:Led1View 
						Background="Transparent" Foreground="Gray" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" HorizontalAlignment="Left" Padding="10,0"/>
				</Border>
			</Grid>
		</Border>
	</Grid>
</UserControl>
