<UserControl 
    x:Class="Framework.View.NameValueCheckBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="35" d:DesignWidth="300">
	<Grid
		IsEnabled="{Binding Path=IsEnabled}">
		<Border 
			BorderBrush="Gray" BorderThickness="1">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="{Binding ValueNameWidthCheck, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=200}"/>
					<ColumnDefinition Width="{Binding ValueWidthCheck, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=100}"/>
				</Grid.ColumnDefinitions>
				<TextBox 
		            Grid.Column="0"
					Text="{Binding ValueNameCheck, RelativeSource={RelativeSource AncestorType=UserControl}}"
					IsReadOnly="True" Background="Transparent" Foreground="Gray" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="12"/>
				<Grid
					Grid.Column="1" Background="White">
					<CheckBox 
						IsChecked="{Binding Path=ValueData, Mode=TwoWay}"
						Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" Background="White"/>
				</Grid>
			</Grid>
		</Border>
	</Grid>
</UserControl>
