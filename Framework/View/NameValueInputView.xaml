<UserControl 
    x:Class="Framework.View.NameValueInputView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="35" d:DesignWidth="300">
	<Grid
		IsEnabled="{Binding Path=IsEnabled}">
		<Border 
			BorderBrush="Gray" BorderThickness="1">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="{Binding ValueNameWidthIn, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=200}"/>
					<ColumnDefinition Width="{Binding ValueWidthIn, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=100}"/>
					<ColumnDefinition Width="{Binding UnitWidthIn, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=0}"/>
				</Grid.ColumnDefinitions>
				<TextBox 
		            Grid.Column="0"
					Text="{Binding ValueNameIn, RelativeSource={RelativeSource AncestorType=UserControl}}"
					IsReadOnly="True" Background="Transparent" Foreground="Gray" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="12"/>
				<TextBox 
		            Grid.Column="1"
			        Text="{Binding Path=ValueData, Mode=TwoWay, UpdateSourceTrigger=LostFocus, FallbackValue=-}"
					IsReadOnly="False"
					Background="White" Foreground="Gray" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" FontSize="12" Padding="10,0"/>
				<TextBox 
		            Grid.Column="2"
					Text="{Binding UnitIn, RelativeSource={RelativeSource AncestorType=UserControl}}"
					IsReadOnly="True" Background="Transparent" Foreground="Gray" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="12" Padding="10,0"/>
			</Grid>
		</Border>
	</Grid>
</UserControl>
