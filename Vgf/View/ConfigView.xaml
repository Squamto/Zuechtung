<UserControl x:Class="Vgf.View.ConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           	 xmlns:conv="clr-namespace:Framework.ViewModel;assembly=Framework"
             xmlns:local="clr-namespace:Vgf.View"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="boolToVisiblity"/>
    </UserControl.Resources>
    <Canvas>
        <Button
            Canvas.Left="670" Canvas.Top="25"
            Content="Read"
            Command="{Binding Path=ReadConfigCommand}"
            Width="100" Height="50" FontSize="12" />
        <Button
            Canvas.Left="670" Canvas.Top="85"
            Content="Save"
            Command="{Binding Path=SaveConfigCommand}"
            Width="100" Height="50" FontSize="12" />
        <Button
            Canvas.Left="670" Canvas.Top="150"
            Content="Refresh"
            Command="{Binding Path=RefreshConfigCommand}"
            Width="100" Height="50" FontSize="12" />
        <TextBlock
            Text="Filename:"
            Margin="5"/>
        <TextBox
            Canvas.Left="60"
            Text="{Binding Path=FileName}"
            MaxWidth="730" Margin="5" IsReadOnly="True"/>
        <TreeView 
            Canvas.Top="20"
            Height="440" Width="650"
            ItemsSource="{Binding Path=ConfigurationTree.Children, Mode=OneWay}"
            Background="Azure" Margin="5">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type conv:TreeNodeViewModel}" ItemsSource="{Binding Children}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="450"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}" Margin="5,2,5,2" Grid.Column="0"/>
                            <TextBox Text="{Binding Value, Mode=TwoWay}" Margin="5,2,5,2" Grid.Column="1"
                                Visibility="{Binding Path= HasChildren, ConverterParameter=true, Converter={StaticResource boolToVisiblity}, FallbackValue=Visible}"/>
                    </Grid>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Canvas>
</UserControl>
