<UserControl x:Class="Vgf.View.ZoneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vgf.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="755">
    <Canvas>
        <TextBox
            Canvas.Left="5"
            Text="{Binding Path=Name, Mode=OneWay}"
            Width="120" Height="45" Background="{Binding Path=NameColor}"  Foreground="Beige" FontSize="20" FontWeight="Bold" 
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox
            Canvas.Left="130"
            Text="{Binding Path=Setpoint}"
            Width="120" Height="45" Background="{Binding Path=SetpointColor}" FontSize="20" FontWeight="Bold" 
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox
            Canvas.Left="255"
            Text="{Binding Path=Temperature}"
            Width="120" Height="45" Background="{Binding Path=TemepratureColor}" FontSize="20" FontWeight="Bold" 
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox
            Canvas.Left="380"
            Text="{Binding Path=SafetyTemperature}"
            Width="120" Height="45" Background="{Binding Path=SafetyTemperatureColor}" FontSize="20" FontWeight="Bold" 
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox
            Canvas.Left="505"
            Text="{Binding Path=Difference}"
            Width="120" Height="45" Background="{Binding Path=DifferenceColor}" FontSize="20" FontWeight="Bold" 
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <TextBox
            Canvas.Left="630"
            Text="{Binding Path=Power}"
            Width="120" Height="45" Background="{Binding Path=PowerColor}" FontSize="20" FontWeight="Bold" 
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
    </Canvas>
</UserControl>
