<UserControl x:Class="Vgf.View.ValuesGrafikView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:local="clr-namespace:Vgf.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <Button
            Canvas.Left="0"
            Content="&lt;"
            Command="{Binding Path=PreviusPlotCommand}"
            FontSize="15" Width="50"/>
        <CheckBox
            Content="Zone1"
            Canvas.Left="100"
			IsChecked="{Binding Path=IsShowZone1}"/>
        <CheckBox
            Canvas.Left="175"
            Content="Zone2"
            IsChecked="{Binding Path=IsShowZone2}"/>
        <CheckBox
            Canvas.Left="250"
            Content="Zone3"
            IsChecked="{Binding Path=IsShowZone3}"/>
        <CheckBox
            Canvas.Left="325"
            Content="Zone4"
            IsChecked="{Binding Path=IsShowZone4}"/>
        <CheckBox
            Canvas.Left="400"
            Content="Zone5"
            IsChecked="{Binding Path=IsShowZone5}"/>
        <CheckBox
            Canvas.Left="475"
            Content="Zone6"
            IsChecked="{Binding Path=IsShowZone6}"/>
        <CheckBox
            Canvas.Left="550"
            Content="Zone7"
            IsChecked="{Binding Path=IsShowZone7}"/>
        <Button
            Canvas.Right="70"
            Content="Auto Zoom"
            Command="{Binding Path=AutoZoomCommand}"
            FontSize="15" Width="100"/>
        <Button
            Canvas.Right="0"
            Content="&gt;"
            Command="{Binding Path=NextPlotCommand}"
            FontSize="15" Width="50"/>
        <oxy:PlotView 
            Canvas.Top="30"
            Model="{Binding PlotViewModel}" 
            Width="800" Height="420"/>
    </Canvas>
</UserControl>
